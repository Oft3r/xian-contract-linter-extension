{
  "name": "xian-contract-linter",
  "displayName": "Xian Contract Linter",
  "description": "Real-time linter for Xian contracts with framework-specific validation",
  "version": "1.2.0",
  "publisher": "xian-dev",
  "icon": "xianlogo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/xian-dev/xian-contract-linter"
  },
  "bugs": {
    "url": "https://github.com/xian-dev/xian-contract-linter/issues"
  },
  "homepage": "https://github.com/xian-dev/xian-contract-linter#readme",
  "license": "MIT",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Linters",
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "xian",
    "blockchain",
    "smart contracts",
    "linter",
    "python",
    "cryptocurrency",
    "web3",
    "dapp"
  ],
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "activationEvents": [
    "onLanguage:python",
    "onCommand:xianLinter.importWallet",
    "onCommand:xianLinter.configureRpc",
    "onCommand:xianLinter.showWalletInfo",
    "onCommand:xianLinter.removeWallet",
    "onCommand:xianLinter.deployContract",
    "onCommand:xianLinter.lintCurrentFile",
    "onCommand:xianLinter.toggleLinter"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "python",
        "extensions": [
          ".py"
        ],
        "aliases": [
          "Python",
          "python"
        ]
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Xian Contract Linter",
      "properties": {
        "xianLinter.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable Xian contract linter"
        },
        "xianLinter.autoDetect": {
          "type": "boolean",
          "default": true,
          "description": "Automatically detect Xian contract files (with con_ prefix)"
        },
        "xianLinter.showSuggestions": {
          "type": "boolean",
          "default": true,
          "description": "Show best practice suggestions"
        },
        "xianLinter.strictMode": {
          "type": "boolean",
          "default": false,
          "description": "Strict mode: show all warnings as errors"
        }
      }
    },
    "commands": [
      {
        "command": "xianLinter.lintCurrentFile",
        "title": "Analyze current file",
        "category": "Xian Linter"
      },
      {
        "command": "xianLinter.toggleLinter",
        "title": "Toggle Linter",
        "category": "Xian Linter"
      },
      {
        "command": "xianLinter.deployContract",
        "title": "Deploy Contract",
        "category": "Xian Linter",
        "icon": {
          "light": "icons/deploy-light.svg",
          "dark": "icons/deploy-dark.svg"
        }
      },
      {
        "command": "xianLinter.importWallet",
        "title": "Import Wallet",
        "category": "Xian Wallet"
      },
      {
        "command": "xianLinter.configureRpc",
        "title": "Configure RPC",
        "category": "Xian Wallet"
      },
      {
        "command": "xianLinter.showWalletInfo",
        "title": "Show Wallet Info",
        "category": "Xian Wallet"
      },
      {
        "command": "xianLinter.removeWallet",
        "title": "Remove Wallet",
        "category": "Xian Wallet"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "xianLinter.lintCurrentFile",
          "when": "resourceExtname == .py",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "xianLinter.deployContract",
          "when": "resourceExtname == .py",
          "group": "navigation@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "node-fetch": "^3.3.2",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@types/node": "^18.19.122",
    "@types/node-fetch": "^2.6.13",
    "@types/vscode": "^1.74.0",
    "@vscode/vsce": "^3.6.0",
    "typescript": "^4.9.4"
  }
}
